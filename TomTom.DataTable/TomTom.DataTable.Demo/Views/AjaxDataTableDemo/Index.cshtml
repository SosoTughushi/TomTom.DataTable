@using TomTom.DataTable
@using TomTom.DataTable.Demo.Controllers
@using TomTom.DataTable.Demo.Models

@{
    var grid = Html.DataGridAjax<AjaxDataTableDemoController, FirstAjaxDemoModel>(new DataGridParameters()
    {
        IsAjaxDataTable = true,
        TableId = "FATD",
        HasPaging = true,
        IsFiltrable = true,
        FilterPartialName = "FirstDemoFilters",
        HasItemsPerPageFilter = true,
        ItemsPerPageEditorTemplateName = "ItemsPerPage"
    }, creator=>creator

    .Column(
        c => c.Id,
        title: "id",
        isFiltrable: true,
        filterEditorTemplateName: "IdFilter",
        createNullableFilter: true,
        isSortable: true)

    .Column(
        c => c.CategoryId, title: "categories",
        isFiltrable: true,
        filterEditorTemplateName: "CategoryFilter",
        createNullableFilter: true)

    .Column(
        c => c.Date, title: "date",
        isFiltrable: true,
        filterEditorTemplateName: "DateFilter",
        createNullableFilter: true,
        isSortable: true)

    .Column(
        c => c.Name, title: "name",
        isFiltrable: true,
        filterEditorTemplateName: "NameFilter")

    .Column(
        c => c.Status,
        title: "status",
        isSortable: true)

    .Column(
        c => c.StatusInt,
        title: "status",
        isFiltrable: true,
        filterEditorTemplateName: "StatusFilter",
        createNullableFilter: true,
        isHidden: true)
        );
}

@grid


@Html.Code("~/Views/AjaxDataTableDemo/FirstAjaxDemoCode.html")